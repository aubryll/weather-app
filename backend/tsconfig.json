{
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true,
      "target": "ES2022",
      "allowJs": false,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "strict": true,
      "strictFunctionTypes": false,
      "noImplicitThis": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      }
    },
    "include": ["src/**/*"],
  }